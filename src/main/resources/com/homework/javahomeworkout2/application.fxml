<VBox alignment="CENTER" prefHeight="395.0" prefWidth="208.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.homework.javahomeworkout2.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label prefHeight="38.0" prefWidth="130.0" text="Выберите продукт" textAlignment="CENTER" wrapText="true" />
   <ComboBox fx:id="productComboBox" prefWidth="150.0" />

    <Label prefHeight="60.0" prefWidth="156.0" text="Введите кол-во грамм продукта" textAlignment="CENTER" wrapText="true" />
   <TextField fx:id="weightInput" prefHeight="24.0" prefWidth="273.0" />
   <Label fx:id="answer" prefHeight="48.0" prefWidth="178.0" textAlignment="CENTER" wrapText="true" />
   <Button mnemonicParsing="false" onAction="#countAnswer" prefHeight="42.0" prefWidth="168.0" text="Рассчитать калорийность" textAlignment="CENTER" wrapText="true" />
</VBox>
